{
  "name": "controls-demo",
  "version": "1.1.0",
  "description": "",
  "author": "Karl Waclawek",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@kdsoft/lit-mvvm": "../..",
    "@kdsoft/lit-mvvm-components": "file:../../components",
    "@nx-js/queue-util": "^1.1.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "vite": "^4.0.2",
    "eslint": "^8.30.0",
    "autoprefixer": "^10.4.13",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^15.1.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "@fortawesome/fontawesome-free": "^6.2.1"
  },
  "scripts": {
    "start": "vite",
    "postcss-fontawesome": "postcss node_modules/@fortawesome/fontawesome-free/css/all.css -o _tmp/fontawesome/css/all.css",
    "postcss-css": "postcss css/**/*.css --dir _tmp",
    "wrap-css": "node scripts/wrap-css.mjs _tmp/**/*.css styles _tmp",
    "prebuild": "rimraf _tmp/**/*",
    "build": "npm run postcss-fontawesome && npm run postcss-css && npm run wrap-css",
    "prepare": "npm run build"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-copy": {
        "basePath": [
          "node_modules"
        ],
        "template": "[path]/[name].[ext][query]",
        "dest": "styles/assets"
      },
      "tailwindcss": {
        "content": ["./*.{html,js}"],
        "theme": {
          "extend": {}
        },
        "plugins": []
      },
      "autoprefixer": {}
    }
  }
}
