{
  "name": "controls-demo",
  "version": "2.0.0",
  "description": "",
  "author": "Karl Waclawek",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@kdsoft/lit-mvvm": "../..",
    "@kdsoft/lit-mvvm-components": "file:../../components",
    "@nx-js/queue-util": "^1.1.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.4",
    "glob": "^8.0.3",
    "rimraf": "^4.0.5",
    "tailwindcss": "^3.2.4",
    "vite": "^4.0.4"
  },
  "scripts": {
    "start": "vite",
    "wrap-css": "node scripts/wrap-css.mjs css/**/*.css styles css",
    "wrap-fontawesome": "node scripts/wrap-css.mjs node_modules/@fortawesome/fontawesome-free/css/all.css styles/fontawesome node_modules/@fortawesome/fontawesome-free",
    "copy-webfonts": "cpy node_modules/@fortawesome/fontawesome-free/webfonts/** styles/fontawesome/webfonts",
    "prebuild": "rimraf styles && npx tailwindcss -i ./css/tailwind.pre -o ./css/tailwind.css",
    "build": "npm run wrap-css && npm run wrap-fontawesome && npm run copy-webfonts",
    "prepare": "npm run build"
  }
}
